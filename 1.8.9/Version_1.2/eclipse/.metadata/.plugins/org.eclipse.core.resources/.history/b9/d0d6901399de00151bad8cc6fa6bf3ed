package com.animcogn.sonicScrewdriverMod.crafting;

import com.animcogn.sonicScrewdriverMod.Main;

import net.minecraft.init.Blocks;
import net.minecraft.init.Items;
import net.minecraft.item.ItemStack;
import net.minecraftforge.fml.common.registry.GameRegistry;

public final class ModCrafting {
	public static void initCrafting() {
		
	GameRegistry.addRecipe(
			new ItemStack(Main.sonicScrewdriver),
			"pes",
			"dod",
			"hta",
			'p', Main.sonicPickaxe,
			'e', Items.emerald,
			's', Main.sonicSword,
			'd', Items.diamond,
			'o', Blocks.obsidian,
			'h', Main.sonicShovel,
			'a', Main.sonicAxe,
			't', Main.timelordFragment);
	GameRegistry.addRecipe(
			new ItemStack(Main.sonicSword),
			"oeo",
			"dsd",
			"ddd",
			'o', Main.timelordFragment,
			'e', Items.emerald,
			'd', Items.diamond,
			's', Items.diamond_sword);
	GameRegistry.addRecipe(
			new ItemStack(Main.sonicShovel),
			"oeo",
			"dsd",
			"ddd",
			'o', Main.timelordFragment,
			'e', Items.emerald,
			'd', Items.diamond,
			's', Items.diamond_shovel);
	GameRegistry.addRecipe(
			new ItemStack(Main.sonicPickaxe),
			"oeo",
			"dsd",
			"ddd",
			'o', Main.timelordFragment,
			'e', Items.emerald,
			'd', Items.diamond,
			's', Items.diamond_pickaxe);
	GameRegistry.addRecipe(
			new ItemStack(Main.sonicAxe),
			"oeo",
			"dsd",
			"ddd",
			'o', Main.timelordFragment,
			'e', Items.emerald,
			'd', Items.diamond,
			's', Items.diamond_axe);
	GameRegistry.addRecipe(
			new ItemStack(Main.timetravelerHelmet), 
			"ttt",
			"tdt",
			"ttt",
			't', Main.timetravelerReminisce,
			'd', Items.diamond_helmet);
	GameRegistry.addRecipe(
			new ItemStack(Main.timetravelerChestplate), 
			"ttt",
			"tdt",
			"ttt",
			't', Main.timetravelerReminisce,
			'd', Items.diamond_chestplate);
	GameRegistry.addRecipe(
			new ItemStack(Main.timetravelerLeggings), 
			"ttt",
			"tdt",
			"ttt",
			't', Main.timetravelerReminisce,
			'd', Items.diamond_leggings);
	GameRegistry.addRecipe(
			new ItemStack(Main.timetravelerBoots), 
			"ttt",
			"tdt",
			"ttt",
			't', Main.timetravelerReminisce,
			'd', Items.diamond_boots);
	}
}
